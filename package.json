{
  "name": "cubeartisan",
  "version": "0.1.0",
  "description": "A cube management and draft service for Magic the Gathering.",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "license": "AGPL-3.0-only",
  "sideEffects": "false",
  "repository": "https://github.com/CubeArtisan/cubeartisan",
  "scripts": {
    "list-files": "`yarn workspaces run --silent list-file` ",
    "lint:fix": "eslint --fix `yarn run --silent list-files`",
    "lint": "eslint --quiet `yarn run --silent list-files`",
    "nearley": "cd client && yarn nearley",
    "nodemon": "nodemon --ignore src --ignore public --ignore server/private --ignore dist/pages --ignore client/__tests__",
    "webpack-dev-server": "webpack serve --config client/webpack.dev.cjs",
    "test-loud": "jest --detectOpenHandles  --coverage",
    "test": "yarn run test-loud -- --silent",
    "test:watch": "yarn run webpack -- --watch & yarn run test-loud -- --watch --verbose false",
    "build": "export NODE_OPTIONS=--max_old_space_size=16000 && yarn run client/nearley && node_modules/.bin/webpack --mode production --config client/webpack.prod.cjs --progress",
    "start": "yarn run client/nearley && yarn run nodemon & yarn run webpack-dev-server",
    "setup": "yarn run client/nearley && node --max-old-space-size=4096 force_update.cjs",
    "cards": "node --max-old-space-size=4096 force_update.cjs",
    "run-daily-jobs": "sh server/jobs/definition/daily.sh",
    "run-weekly-jobs": "sh server/jobs/definition/weekly.sh",
    "run-monthly-jobs": "sh server/jobs/definition/monthly.sh",
    "run-constantly-jobs": "sh server/jobs/definition/constantly.sh"
  },
  "dependencies": {
    "@cubeartisan/client": "^0.1.0",
    "@cubeartisan/server": "^0.1.0",
    "browserslist": "^4.16.6",
    "mongodb-memory-server": "^6.9.6",
    "webpack": "^5.42.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^23.9.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^26.0.1",
    "mongoose": "^5.12.10",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.0",
    "sinon": "^7.4.2",
    "supertest": "^6.1.3",
    "typescript": "^4.3.4"
  }
}
